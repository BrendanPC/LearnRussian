{
  "manifest_version": 2,

  "name": "Russian Ты и Я!",
  "description": "This extension replaces certain English nouns on a webpage with their Russian equivalents.",
  "version": "1.3",

  "browser_action": {
	"default_popup": "popup.html",
	"default_title": "Русски Ты и Я!"
  },
  "permissions": [
    "activeTab",
		"storage",
		"contextMenus"
  ],
	"background": {
    "scripts": ["contextMenuEvent.js"],
		"persistent": false
  },
  "content_scripts": [
    {
	  "matches": ["<all_urls>"],
      "js": ["jquery-3.1.1.min.js", "dictionary.js", "swapscript.js"]
    }]
}